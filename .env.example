# PostgreSQL
POSTGRES_DB=aioc_hospital
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# JWT â€” CHANGE THIS before going to production (must be the same across all services)
SECRET_KEY=change-this-secret-key-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=480

# CORS: origins the browser will call the backends from (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Default user seeding (user:pass and admin:admin)
# Set to false once you have created your real users
SEED_DEFAULT_USERS=true

# Ports exposed on the host
BACKEND_PORT=8000
MANAGEMENT_PORT=8001
SCHEDULING_PORT=8002
REPORTS_PORT=8003
FRONTEND_PORT=3000

# Backend URLs baked into the React bundle at build time.
# Must be addresses the *browser* (not Docker) can reach.
VITE_API_URL=http://localhost:8000
VITE_MANAGEMENT_API_URL=http://localhost:8001
VITE_SCHEDULING_API_URL=http://localhost:8002
VITE_REPORTS_API_URL=http://localhost:8003
